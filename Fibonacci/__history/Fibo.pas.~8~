{$R *.dfm}
  //implementacion de la funcion recursiva
function Fibonacci(n:integer):Integer;
begin
  if (n=0) or (n=1) then
    Fibonacci := 1
  else
    Fibonacci := Fibonacci(n-1) + Fibonacci(n-2);
end;

   //utilizacion de la funcion
